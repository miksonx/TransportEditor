<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.oskopek.transporteditor</groupId>
    <artifactId>transporteditor</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>TransportEditor</name>
    <description>A problem editor and plan visualizer for the Transport domain from the IPC 2008.</description>
    <modules>
        <module>transporteditor-editor</module>
    </modules>
    <scm>
        <url>https://github.com/oskopek/TransportEditor.git</url>
        <connection>scm:git:https://github.com/oskopek/TransportEditor.git</connection>
        <developerConnection>scm:git:https://github.com/oskopek/TransportEditor.git</developerConnection>
        <tag>HEAD</tag>
    </scm>
    <url>https://www.ohloh.net/p/TransportEditor</url>
    <issueManagement>
        <system>GitHub</system>
        <url>https://github.com/oskopek/TransportEditor/issues</url>
    </issueManagement>
    <ciManagement>
        <system>TravisCI</system>
        <url>https://travis-ci.org/oskopek/TransportEditor</url>
    </ciManagement>
    <organization>
        <name>Ondrej Skopek</name>
        <url>https://github.com/oskopek/TransportEditor/graphs/contributors</url>
    </organization>
    <prerequisites>
        <maven>3.0.5</maven>
    </prerequisites>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>commons-lang</groupId>
                <artifactId>commons-lang</artifactId>
                <version>20030203.000129</version>
            </dependency>
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>4.12</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>ch.qos.logback</groupId>
                <artifactId>logback-classic</artifactId>
                <version>1.1.6</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <build>
    </build>
    <profiles>
        <profile>
            <id>docs</id>
            <build>
                <plugins>
                    <plugin>
  <artifactId>exec-maven-plugin</artifactId>
  <groupId>org.codehaus.mojo</groupId>
<version>1.3.2</version>
  <executions>
    <execution>
     <id>Build docs</id>
      <phase>prepare-package</phase>
      <goals>
        <goal>exec</goal>
      </goals>
      <configuration>
        <executable>cd ${basedir}/docs/; build.sh; cd ${basedir}</executable>
      </configuration>
    </execution>
</executions>
</plugin>
</plugins>
</build>
</profile>
                </profiles>
</project>
