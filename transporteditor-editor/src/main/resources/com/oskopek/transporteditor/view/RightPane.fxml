<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" minWidth="300" prefWidth="400"
            xmlns="http://javafx.com/javafx/8.0.112-ea"
            fx:controller="com.oskopek.transporteditor.controller.RightPaneController">
    <center>
        <TabPane fx:id="planTabPane" tabClosingPolicy="UNAVAILABLE">
            <Tab fx:id="linearPlanTab" text="Linear">
                <ScrollPane fx:id="linearPlanTabScrollPane"/>
            </Tab>
            <Tab fx:id="ganttPlanTab" text="Gantt">
                <ScrollPane fx:id="ganttPlanTabScrollPane"/>
            </Tab>
        </TabPane>
    </center>
    <top>
        <BorderPane prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <center>
                <Button fx:id="planButton" disable="true" onAction="#handlePlan" prefWidth="Infinity" text="%plan"
                        BorderPane.alignment="CENTER">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Button>
            </center>
            <right>
                <Button fx:id="cancelPlanButton" alignment="CENTER_RIGHT" disable="true" maxWidth="40.0" minWidth="40.0"
                        onAction="#handleCancelPlan" prefWidth="40.0" style="-fx-text-fill: red" text="%crossmark"
                        BorderPane.alignment="CENTER_RIGHT">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Button>
            </right>
        </BorderPane>
    </top>
</BorderPane>
