<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" minWidth="300" prefWidth="400" xmlns="http://javafx.com/javafx/8.0.112"
            fx:controller="com.oskopek.transporteditor.controller.RightPaneController">
    <center>
        <TabPane fx:id="planTabPane" tabClosingPolicy="UNAVAILABLE">
            <Tab fx:id="linearPlanTab" text="Linear">
                <ScrollPane fx:id="linearPlanTabScrollPane"/>
            </Tab>
            <Tab fx:id="ganttPlanTab" text="Gantt">
                <ScrollPane fx:id="ganttPlanTabScrollPane"/>
            </Tab>
        </TabPane>
    </center>
    <top>
        <GridPane prefHeight="30.0" prefWidth="Infinity" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="planButton" disable="true" maxWidth="1.7976931348623157E308" onAction="#handlePlan"
                        text="%plan" HBox.hgrow="ALWAYS" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Button>
                <Button fx:id="validateButton" disable="true" maxWidth="1.7976931348623157E308"
                        onAction="#handleValidate" text="%validate" HBox.hgrow="ALWAYS" GridPane.columnIndex="2"
                        GridPane.rowIndex="0">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Button>
                <HBox prefHeight="30.0" prefWidth="Infinity" spacing="5.0" BorderPane.alignment="CENTER"
                      GridPane.columnIndex="0" GridPane.rowIndex="2">
                    <children>
                        <Button fx:id="addLocationButton" disable="true" maxWidth="1.7976931348623157E308"
                                onAction="#handleAddLocation"
                                text="%add.location" HBox.hgrow="ALWAYS"/>
                        <Button fx:id="addRoadButton" disable="true" maxWidth="1.7976931348623157E308"
                                onAction="#handleAddRoad" text="%add.road" HBox.hgrow="ALWAYS"/>
                    </children>
                </HBox>
                <HBox prefHeight="30.0" prefWidth="Infinity" spacing="5.0" BorderPane.alignment="CENTER"
                      GridPane.columnIndex="2" GridPane.rowIndex="2">
                    <children>
                        <Button fx:id="addVehicleButton" disable="true" maxWidth="1.7976931348623157E308"
                                onAction="#handleAddVehicle"
                                text="%add.vehicle" HBox.hgrow="ALWAYS"/>
                        <Button fx:id="addPackageButton" disable="true" maxWidth="1.7976931348623157E308"
                                onAction="#handleAddPackage" text="%add.package" HBox.hgrow="ALWAYS"/>
                        <Button fx:id="lockButton" disable="true" maxWidth="1.7976931348623157E308"
                                onAction="#handleLockToggle" text="%lock" HBox.hgrow="ALWAYS"
                                style="-fx-text-fill: red;" />
                    </children>
                </HBox>
            </children>
            <rowConstraints>
                <RowConstraints minHeight="35.0" prefHeight="35.0"/>
                <RowConstraints minHeight="5.0" prefHeight="5.0"/>
                <RowConstraints minHeight="25.0" prefHeight="25.0"/>
            </rowConstraints>
            <columnConstraints>
                <ColumnConstraints minWidth="100.0" prefWidth="200.0"/>
                <ColumnConstraints minWidth="5.0" prefWidth="5.0"/>
                <ColumnConstraints minWidth="200.0" prefWidth="300.0"/>
            </columnConstraints>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </GridPane>
    </top>
</BorderPane>
